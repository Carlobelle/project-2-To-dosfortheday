<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Post A New Bible Verse:</h3>

    <form class="form new-bibleverses-form">
      <div class="form-group">
        <label for="bibleverses-name">Bible Verse:</label>
        <input class="form-input" type="text" id="bibleverses-verse" name="bibleverses-verse" />
      </div>
      
      <div class="form-group">
        <label for="bibleverses-desc">description:</label>
        <textarea class="form-input" id="bibleverses-desc" name="bibleverses-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if bible_verses.length}}
  <div class="col-md-6 bibleverses-list">
    <h3>Current Bible Verses:</h3>

    {{#each bible_verses as |bibleverses|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/bibleverses/{{bibleverses.id}}">{{bibleverses.verse}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{bibleverses.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
